{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "rootDirs": ["./src"],
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": [ 
      "./typings",
      "./node_modules/@types/"
    ],
    
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
